{
    "compilerOptions": {
        "outDir": "build",
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": [
          "es6",
          "dom"
        ],
        "skipLibCheck": true,
        "noImplicitAny": false,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
